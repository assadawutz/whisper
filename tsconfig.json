{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next/dev/dev/types/**/*.ts",
    "engine/**/*"
  ],
  "exclude": [
    "node_modules",
    "blueprint-factory",
    "image-to-ui-monorepo",
    "exporters",
    "gate",
    "hints",
    "lock",
    "module",
    "nodes",
    "overlay",
    "pipeline",
    "scan",
    "snapshots",
    "uploads",
    "verify"
  ]
}
